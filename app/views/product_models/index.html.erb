<h2> Modelos de produtos </h2>

<section id="product_models">

<div>
    <%= link_to 'Cadastrar novo modelo de produto', new_product_model_path %>
</div>

<% if @product_models.any? %>

    
        <% @product_models.each do |p| %>
        <div>

            <dl>
                <dt><%=ProductModel.model_name.human%>: </dt>
                <dd> <%= link_to p.name, product_model_path(p.id) %> </dd> <br>
                <dt><%=ProductModel.human_attribute_name(:sku)%>: </dt>
                <dd> <%= p.sku %> </dd> <br>
                 <dt><%=ProductModel.human_attribute_name(:supplier)%>: </dt>
                <dd> <%= p.supplier.brand_name %> </dd> <br> <br>

            </dl>

        </div>
        <% end %>

<% else %>

   <p> Não há modelos de produtos cadastrados! </p>
   
<% end %>

</section>