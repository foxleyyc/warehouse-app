<!DOCTYPE html>
<html>
  <head>
    <title>WarehouseApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <header>
      <%= link_to root_path do %>
        <h1> Galp√µes & Estoque </h1>
      <% end %>
      <nav>
        <%= link_to('Fornecedores', suppliers_path) %> <br>
        <%= link_to('Modelos de Produtos', product_models_path) %> <br>
        <%= link_to('Registrar pedido', new_order_path) %> <br>
        <% if user_signed_in? %>
          <%= current_user.description %>
          <%= form_with(url: search_orders_path, method: :get) do |f| %>
            <%= f.label :query, 'Procurar pedido' %>
            <%= f.text_field :query %>
            <%= f.submit 'Buscar' %>
          <%end%>
          <%= button_to('Sair', destroy_user_session_path, method: :delete) %> <br>
        <% else %>
           <%= link_to('Entrar', new_user_session_path) %> <br>
        <% end %>
      </nav>
    </header>

    <main>
    
      <div>
      <%=alert%>
      <%=notice%>
      </div>

    <%= yield %>
    </main>
  </body>
</html>
